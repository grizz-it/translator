{
    "name": "grizz-it/translator",
    "description": "A package containing tools to translate strings and arrays.",
    "keywords": [
        "translations"
    ],
    "type": "library",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "license": "MIT",
    "require": {
        "php": "^8.0"
    },
    "authors": [
        {
            "name": "GrizzIT",
            "homepage": "https://www.grizzit.com/",
            "role": "Developer"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "GrizzIt\\Translator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GrizzIt\\Translator\\Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/.gitignore",
            "/.travis.yml",
            "/phpunit.xml",
            "/phpcs.xml",
            "/PULL_REQUEST_TEMPLATE.md",
            "/CODE_OF_CONDUCT.md",
            "/CONTRIBUTING.md"
        ]
    }
}