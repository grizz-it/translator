{
    "name": "grizz-it/translator",
    "description": "A package containing tools to translate strings and arrays.",
    "keywords": ["translations"],
    "type": "library",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
    {
        "name": "GrizzIT",
        "homepage": "https://www.grizzit.com/",
        "role": "Developer"
    }],
    "autoload":
    {
        "psr-4":
        {
            "GrizzIt\\Translator\\": "src/"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "GrizzIt\\Translator\\Tests\\": "tests/"
        }
    },
    "archive":
    {
        "exclude": [
            "/tests",
            "/.gitignore",
            "/.travis.yml",
            "/phpunit.xml",
            "/phpcs.xml",
            "/PULL_REQUEST_TEMPLATE.md",
            "/CODE_OF_CONDUCT.md",
            "/CONTRIBUTING.md"
        ]
    },
    "require-dev":
    {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "require": {
        "php": "^7.2"
    }
}
